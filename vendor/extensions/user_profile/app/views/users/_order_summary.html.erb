<% unless orders.empty? %>
	<table class="order-summary" cellpadding="0" cellspacing="0">
		<tbody>
		<% orders.each do |order| %>
		  <tr class="<%= cycle('even', 'odd') %>">
		    <td class="label"><%= t("order_number") %></td>
			<td><%= link_to order.number, order_url(order) %></td>
		    <td class="label"><%= t("order_date") %></td>
			<td><%=order.created_at.to_date%></td>
		    <td>	<%= link_to "VIEW", order_url(order) %>
		  </tr>
		<% end %>
		</tbody>
	</table>
<% else %>
 <p>You haven't got any relevant orders to display</p>
<% end %>